		<condition>[:plot,length:] &gt; 503</condition>
		<button>COMMA</button>
		<action>EXTRA</action>	
		<file>movieplot_2_people_list</file>
	</remote> -->
	<remote>
	   <button>BACK</button>
	   <action>BACK</action>
	   <data>index</data>
	</remote>			
	<remote>
		<button>PLAY</button>
		<action>PLAYALL</action>	
	</remote>	
	<remote>
		<button>PAUSE</button>
		<action>PLAYALL</action>	
	</remote>		
	<remote>
		<button>SELECT</button>
		<action>PLAYALL</action>	
	</remote>	
	<remote>
		<button>NUMPAD</button>
		<action>PLAYPART</action>	
	</remote>
	<remote>
		<button>SEARCH</button>
		<action>SCREEN</action>
		<file>help/help_[:#nmtmodel,lower:]_movie</file>
	</remote>	
	<remote>
		<button>REPEAT</button>
		<action>RESET</action>
		<title>[:%reset:]</title>
	</remote>
</eskin>