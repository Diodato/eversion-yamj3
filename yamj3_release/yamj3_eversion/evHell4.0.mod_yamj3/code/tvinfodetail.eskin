<?xml version="1.0" encoding="UTF-8"?>
<eskin>
    <control>
		<fullscreen>true</fullscreen>
		<clearhighresbg>false</clearhighresbg>
    </control>
	
	<background>
		<file>[:@jukebox:][:fanart1large:]</file>
	</background>	
	
	<image>
		<name>tvinfodetails</name>
		<file>[:@media:]movie/tvdetails.swf</file>
		<posx>0</posx>
		<posy>520</posy>
		<width>1280</width>
		<height>200</height>
	</image>	

	<text>
		<name>language_prompt</name>
		<display>[:%language:]</display>
		<posx>15</posx>
		<posy>565</posy>
		<width>200</width>
		<height>25</height>
		<size>17</size>  
		<color>movie.label.color</color>
	</text>
	
	<image>
		<name>footeraudiolanguages</name>
		<file>[:@media:]purity/flags/[:audiocodeclanguagecode,lower:].png</file>
		<posx>115</posx>
		<posy>555</posy>
		<width>51</width>
		<height>51</height>
	</image>
	
	<text>
		<name>audiocodec_prompt</name>
		<display>[:%audiocodec:]</display>
		<posx>15</posx>
		<posy>616</posy>
		<width>200</width>
		<height>25</height>
		<size>17</size>  
		<color>movie.label.color</color>
	</text>
	
	<image>
		<name>footeraudiocodecs</name>
		<file>[:@media:]purity/audiocodec/audcod_[:audiocodec,lower:].swf</file>
		<posx>115</posx>
		<posy>606</posy>
		<width>70</width>
		<height>51</height>
	</image>
	
	<text>
		<name>channels_prompt</name>
		<display>[:%channels:]</display>
		<posx>15</posx>
		<posy>667</posy>
		<width>200</width>
		<height>25</height>
		<size>17</size>  
		<color>movie.label.color</color>
	</text>

	<image>
		<name>footeraudiochannels</name>
		<file>[:@media:]purity/channel/audch_[:audiochannels,lower:].swf</file>
		<posx>105</posx>
		<posy>657</posy>
		<width>81</width>
		<height>51</height>
	</image>	

	<text>
		<name>subtitles_prompt</name>
		<display>[:%subtitles:]</display>
		<posx>655</posx>
		<posy>565</posy>
		<width>200</width>
		<height>25</height>
		<size>17</size>  
		<color>movie.label.color</color>
	</text>	

	<image>
		<name>footersubtitle</name>
		<file>[:@media:]purity/flags/[:subtitles,lower:].png</file>
		<posx>755</posx>
		<posy>555</posy>
		<width>51</width>
		<height>51</height>
	</image>

	<text>
		<name>company_prompt</name>
		<display>[:$company:]: [:company:]</display>
		<posx>655</posx>
		<posy>616</posy>
		<width>200</width>
		<height>25</height>
		<size>17</size>  
		<color>movie.label.color</color>
	</text>
